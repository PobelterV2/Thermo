<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="minjinsong.thermostat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Thermostat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WebService"
            android:theme="@style/AppTheme"
            android:label="Thermostat Web Service"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".WeekOverview"
            android:screenOrientation="portrait"
            android:label="Thermostat Week Overview"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name=".MondaySetting"
            android:screenOrientation="portrait"
            android:label="Monday"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name=".DayNightSetting"
            android:screenOrientation="portrait"
            android:label="Day and Night Temperature"
            android:theme="@style/AppTheme" >
        </activity>

    </application>

</manifest>